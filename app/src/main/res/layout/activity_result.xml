<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".result">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:id="@+id/name_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이진주님, 당신은"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/gender_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="모든지 다 잘하는 마리입니다."
            android:textSize="25sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="461dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/goodresult"
                />
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="461dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/sosoresult"
                />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="461dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/badresult" />
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:id="@+id/save_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="결과 저장하기"
                app:backgroundTint="#3F51B5" />
            <Button
                android:layout_weight="1"
                android:id="@+id/back_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="처음으로"
                app:backgroundTint="#3F51B5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>